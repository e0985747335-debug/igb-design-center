    <script>
        // Chart.js 初始化函數
        let cashFlowChartInstance = null;
        function initializeCashFlowChart() {
            const ctx = document.getElementById('cashFlowChart');

            // 如果圖表已經存在，先銷毀它
            if (cashFlowChartInstance) {
                cashFlowChartInstance.destroy();
            }

            // 隨機生成模擬數據
            const cashIn = [350000, 420000, 480000, 500000, 520000, 550000];
            const cashOut = [210000, 250000, 280000, 310000, 300000, 340000];
            const netCash = cashIn.map((c, i) => c - cashOut[i]);

            const chartData = {
                labels: ['四月', '五月', '六月', '七月', '八月', '九月'],
                datasets: [
                    {
                        label: '現金流入 (Cash In)',
                        data: cashIn,
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.3,
                        fill: true,
                        yAxisID: 'y'
                    },
                    {
                        label: '淨現金流 (Net Flow)',
                        data: netCash,
                        borderColor: 'rgb(59, 130, 246)', // Blue-500
                        backgroundColor: 'rgba(59, 130, 246, 0.4)',
                        tension: 0.3,
                        fill: false,
                        yAxisID: 'y'
                    },
                    {
                        label: '現金流出 (Cash Out)',
                        data: cashOut,
                        borderColor: 'rgb(239, 68, 68)', // Red-500
                        backgroundColor: 'rgba(239, 68, 68, 0.2)',
                        tension: 0.3,
                        fill: false,
                        yAxisID: 'y',
                        borderDash: [5, 5]
                    }
                ]
            };

            cashFlowChartInstance = new Chart(ctx, {
                type: 'line',
                data: chartData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#d1d5db' // Gray-300
                            }
                        },
                        title: {
                            display: false,
                        }
                    },
                    scales: {
                        x: {
                            ticks: {
                                color: '#9ca3af' // Gray-400
                            },
                            grid: {
                                color: '#374151' // Gray-700
                            }
                        },
                        y: {
                            beginAtZero: false,
                            ticks: {
                                color: '#9ca3af', // Gray-400
                                callback: function(value, index, values) {
                                    return '$' + (value / 1000) + 'K';
                                }
                            },
                            grid: {
                                color: '#374151' // Gray-700
                            }
                        }
                    }
                }
            });
        }

        // ==============================================
        // Toast 訊息顯示功能
        // ==============================================
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');

            let bgColor = 'bg-green-600';
            let iconSvg = '<svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2z"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>'; // Info/Checkmark

            if (type === 'error') {
                bgColor = 'bg-red-600';
                iconSvg = '<svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="15" x2="9" y1="9" y2="15"/><line x1="9" x2="15" y1="9" y2="15"/></svg>';
            } else if (type === 'warning') {
                bgColor = 'bg-yellow-600';
                iconSvg = '<svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg>';
            } else if (type === 'success') {
                bgColor = 'bg-green-600';
                iconSvg = '<svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="M9 11l3 3L22 4"/></svg>';
            }

            toast.className = `${bgColor} text-white p-4 rounded-lg shadow-xl flex items-center max-w-sm opacity-0 transition-opacity duration-300 transform translate-x-1/2`;
            toast.innerHTML = `${iconSvg}<span class="text-sm font-semibold">${message}</span>`;

            container.appendChild(toast);

            // Fade in
            setTimeout(() => {
                toast.classList.remove('opacity-0', 'translate-x-1/2');
                toast.classList.add('opacity-100', 'translate-x-0');
            }, 50);

            // Fade out and remove
            setTimeout(() => {
                toast.classList.remove('opacity-100', 'translate-x-0');
                toast.classList.add('opacity-0', 'translate-x-1/2');

                // Remove from DOM after transition
                setTimeout(() => {
                    if (container.contains(toast)) {
                        container.removeChild(toast);
                    }
                }, 300);
            }, 3000);
        }

        // 匯出報表功能：呼叫瀏覽器列印對話框
        function exportFinancialReport() {
            window.print();
        }

        // 頁面視圖管理器
        function showView(viewId) {
            // 定義短 ID 到完整 HTML ID 的映射
            const views = {
                'main-menu': 'main-menu-view',
                'finance': 'finance-module-view',
                'gl': 'general-ledger-view'
            };

            const targetId = views[viewId];
            if (!targetId) {
                console.error(`Invalid viewId: ${viewId}`);
                return;
            }

            // 1. 隱藏所有已知視圖
            Object.values(views).forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.classList.add('hidden');
                }
            });

            // 2. 顯示目標視圖
            const targetElement = document.getElementById(targetId);
            if (targetElement) {
                targetElement.classList.remove('hidden');
            } else {
                console.error(`Target view element not found for ID: ${targetId}`);
                return;
            }

            // 3. 如果切換到財務儀表板，則重新初始化圖表
            if (viewId === 'finance') {
                // 給予瀏覽器一些時間來繪製 DOM，然後初始化 Chart.js
                setTimeout(initializeCashFlowChart, 100);
            }
        }

        // 頁面加載完成後，預設顯示主選單
        document.addEventListener('DOMContentLoaded', function() {
            showView('main-menu');
        });
    </script>

</body>
