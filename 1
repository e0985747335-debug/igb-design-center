import React, { useState, useEffect } from 'react';
// ç‚ºäº†åœ¨å–®ä¸€æª”æ¡ˆç’°å¢ƒä¸­é‹è¡Œï¼Œæˆ‘å€‘ç›´æ¥å°å…¥ Firebase å‡½å¼
import { initializeApp } from 'firebase/app';
import { getAuth, onAuthStateChanged, signInAnonymously } from 'firebase/auth';

// 1. æ¨¡æ“¬ç’°å¢ƒè®Šæ•¸å’Œé…ç½® (å°æ‡‰ .env.local å’Œ firebase_init.js çš„å…§å®¹)
// åœ¨å¯¦éš›å°ˆæ¡ˆä¸­ï¼Œé€™äº›å€¼æœƒå¾ process.env è‡ªå‹•è¼‰å…¥ã€‚
const firebaseConfig = {
  apiKey: "AIzaSy...MockAPIKey...kExA",
  authDomain: "your-project-id.firebaseapp.com",
  projectId: "your-project-id",
  storageBucket: "your-project-id.appspot.com",
  messagingSenderId: "1234567890",
  appId: "1:1234567890:web:abcdefghijklmno",
  measurementId: "G-ABCDEFG"
};

// 2. åˆå§‹åŒ– Firebase (å°æ‡‰ firebase_init.js çš„é‚è¼¯)
// ç¢ºä¿åªåˆå§‹åŒ–ä¸€æ¬¡
let app;
try {
  app = initializeApp(firebaseConfig);
} catch (error) {
  console.error("Firebase åˆå§‹åŒ–å¤±æ•—:", error);
}

// ç²å– Auth æœå‹™å¯¦ä¾‹
const auth = app ? getAuth(app) : null;

// ä¸»è¦æ‡‰ç”¨ç¨‹å¼å…ƒä»¶
const App = () => {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');

  // 3. ç‹€æ…‹ç›£è½é‚è¼¯ (å°æ‡‰ AuthStatusComponent.jsx çš„å…§å®¹)
  useEffect(() => {
    if (!auth) {
      setError("Firebase Auth æœå‹™æœªåˆå§‹åŒ–ã€‚è«‹æª¢æŸ¥é…ç½®ã€‚");
      setLoading(false);
      return;
    }

    // onAuthStateChanged ç›£è½å™¨
    const unsubscribe = onAuthStateChanged(auth, (currentUser) => {
      setUser(currentUser);
      setLoading(false);
    });

    // å…ƒä»¶å¸è¼‰æ™‚æ¸…ç†ç›£è½å™¨
    return () => unsubscribe();
  }, []);

  // åŒ¿åç™»å…¥è™•ç†
  const handleSignInAnonymously = async () => {
    if (!auth) {
      setError("Auth æœå‹™ä¸å¯ç”¨ã€‚");
      return;
    }
    setLoading(true);
    try {
      await signInAnonymously(auth);
      // onAuthStateChanged æœƒè‡ªå‹•æ›´æ–°ç‹€æ…‹
    } catch (err) {
      console.error("åŒ¿åç™»å…¥å¤±æ•—:", err);
      setError(`ç™»å…¥éŒ¯èª¤: ${err.message}`);
      setLoading(false);
    }
  };

  // ç™»å‡ºè™•ç† (æ–¹ä¾¿æ¸¬è©¦)
  const handleSignOut = async () => {
    if (!auth) return;
    try {
      setLoading(true);
      await auth.signOut();
      // onAuthStateChanged æœƒè‡ªå‹•æ›´æ–°ç‹€æ…‹
    } catch (err) {
      console.error("ç™»å‡ºå¤±æ•—:", err);
      setError(`ç™»å‡ºéŒ¯èª¤: ${err.message}`);
      setLoading(false);
    }
  };


  if (!auth) {
      return (
          <div className="min-h-screen bg-red-100 flex items-center justify-center p-4">
              <p className="text-xl font-bold text-red-700">é…ç½®éŒ¯èª¤ï¼šFirebase Auth æœå‹™æœªæˆåŠŸåˆå§‹åŒ–ã€‚</p>
          </div>
      );
  }

  if (loading) {
    return (
      <div className="flex justify-center items-center h-screen bg-gray-50 p-4">
        <div className="text-xl font-semibold text-blue-600 animate-pulse bg-white p-4 rounded-xl shadow-lg">
          è¼‰å…¥ä¸­ï¼Œæª¢æŸ¥èº«ä»½é©—è­‰ç‹€æ…‹...
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-100 flex flex-col items-center justify-center p-4">
      {/* è¼‰å…¥ Tailwind CSS */}
      <script src="https://cdn.tailwindcss.com"></script>
      <style>{`
        /* ç¢ºä¿å­—é«”å¥½çœ‹ */
        body { font-family: 'Inter', sans-serif; }
      `}</style>

      <h1 className="text-4xl font-extrabold text-gray-800 mb-2 tracking-tight">
        Firebase èº«ä»½é©—è­‰ç‹€æ…‹å„€è¡¨æ¿
      </h1>
      <p className="text-sm text-gray-500 mb-8">ä½¿ç”¨ `onAuthStateChanged` å¯¦æ™‚ç›£è½ç‹€æ…‹ã€‚</p>

      {error && (
        <div className="w-full max-w-md bg-red-500 text-white p-3 rounded-lg mb-4 shadow-md">
          <p className="font-semibold">éŒ¯èª¤:</p>
          <p className="text-sm">{error}</p>
        </div>
      )}

      <div className="w-full max-w-lg bg-white rounded-xl shadow-2xl p-6 md:p-10 border-t-8 border-indigo-600">
        
        {/* ç‹€æ…‹æ¨™ç±¤ */}
        <div className={`text-center py-3 px-4 rounded-xl font-bold transition duration-300 mb-6 shadow-lg ${user ? 'bg-green-500 text-white' : 'bg-red-500 text-white'}`}>
          <span className="text-2xl">{user ? 'âœ… å·²ç™»å…¥' : 'âŒ æœªç™»å…¥'}</span>
        </div>

        <div className="space-y-4">
          
          <p className="text-lg font-semibold text-gray-700">ç”¨æˆ¶ ID (UID):</p>
          <div className={`p-4 rounded-lg border ${user ? 'border-indigo-400 bg-indigo-50' : 'border-red-400 bg-red-50'}`}>
            <code className="block text-sm break-all text-gray-800 font-mono">
              {user ? user.uid : 'N/A (è«‹é»æ“Šä¸‹æ–¹æŒ‰éˆ•ç™»å…¥)'}
            </code>
          </div>

          <p className="text-lg font-semibold text-gray-700 pt-4">æä¾›è€…:</p>
          <div className="p-4 rounded-lg border border-gray-300 bg-gray-50">
            <code className="block text-sm break-all text-gray-700 font-mono">
              {user ? (user.isAnonymous ? 'åŒ¿å (Anonymous)' : user.providerData[0]?.providerId || 'æœªçŸ¥') : 'N/A'}
            </code>
          </div>

        </div>

        {/* äº’å‹•æŒ‰éˆ• */}
        <div className="mt-8 flex flex-col space-y-4">
            {!user ? (
                <button 
                    onClick={handleSignInAnonymously}
                    className="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold text-lg rounded-xl shadow-xl transition duration-300 transform hover:scale-[1.01] focus:outline-none focus:ring-4 focus:ring-indigo-500"
                >
                    ğŸš€ ä½¿ç”¨åŒ¿åå¸³è™Ÿç™»å…¥
                </button>
            ) : (
                 <button 
                    onClick={handleSignOut}
                    className="w-full py-3 bg-red-600 hover:bg-red-700 text-white font-bold text-lg rounded-xl shadow-xl transition duration-300 transform hover:scale-[1.01] focus:outline-none focus:ring-4 focus:ring-red-500"
                >
                    ğŸšª ç™»å‡º
                </button>
            )}
        </div>
      </div>

      <footer className="mt-10 text-sm text-gray-500 text-center max-w-lg">
        æ­¤ç¯„ä¾‹å·²æ•´åˆæ‚¨çš„ä¸‰å€‹ç¨‹å¼ç¢¼ç‰‡æ®µï¼šé…ç½®ã€åˆå§‹åŒ–ä»¥åŠ React çš„ Auth ç›£è½çµ„ä»¶ã€‚
        <br/>
        **æ³¨æ„ï¼š** ç”±æ–¼æœªæä¾›æœ‰æ•ˆçš„ Firebase é‡‘é‘°ï¼Œæ­¤æ‡‰ç”¨ç¨‹å¼çš„ç™»å…¥æ“ä½œä¸æœƒå¯¦éš›èˆ‡ Google çš„ Firebase æœå‹™é€£ç·šã€‚
      </footer>
    </div>
  );
};

export default App;
