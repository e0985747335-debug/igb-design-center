    <!-- Firebase SDKs -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged, setPersistence, browserSessionPersistence } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, onSnapshot, collection, query, orderBy, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";

        // è¨­å®š Firebase æ—¥èªŒç´šåˆ¥
        setLogLevel('Debug');

        // å…¨åŸŸè®Šæ•¸åˆå§‹åŒ–
        window.firebaseApp = null;
        window.db = null;
        window.auth = null;
        window.userId = null;
        window.expensesCollection = null;

        // è²»ç”¨ç§‘ç›®è³‡æ–™
        const expenseCategories = [
            { title: "ğŸ’¼ æ—…è²»åŠäº¤é€šè²» (Travel & Transport)", subItems: ["åœ‹å…§å·®æ—…è²» (Domestic)", "åœ‹å¤–å·®æ—…è²» (International)", "å¸‚å€äº¤é€šè²» (Local Transit)", "é«˜éµ/ç«è»Šç¥¨ (Rail Fare)", "æ©Ÿç¥¨è²»ç”¨ (Airfare)", "ä½å®¿è²»ç”¨ (Accommodation)"] },
            { title: "ğŸ½ï¸ é¤è²»åŠæ‹›å¾…è²» (Meals & Entertainment)", subItems: ["å®¢æˆ¶æ‹›å¾…è²» (Client Entertainment)", "å“¡å·¥ç¦åˆ©é¤è²» (Staff Welfare)", "å…§éƒ¨æœƒè­°é¤é£² (Internal Meeting F&B)"] },
            { title: "ğŸ“¦ è¾¦å…¬èˆ‡è¡Œæ”¿è²» (Office & Admin)", subItems: ["è¾¦å…¬ç”¨å“åŠè€—æ (Supplies)", "éƒµé›»/é€šè¨Šè²» (Post & Telecom)", "ç§Ÿé‡‘æ”¯å‡º (Rent Expense)", "æ°´é›»ç“¦æ–¯è²» (Utilities)", "ä¿®ç¹•èˆ‡ç¶­è­·è²» (Repair & Maint.)", "å ±ç« é›œèªŒè¨‚é–±è²» (Subscriptions)"] },
            { title: "ğŸ’» è³‡è¨Šèˆ‡è»Ÿé«”è²» (IT & Software)", subItems: ["è»Ÿé«”è¨‚é–±è²» (Software Subscription)", "ç¡¬é«”æ¡è³¼è²» (Hardware Purchase)", "è³‡è¨Šæœå‹™è²» (IT Services)", "é›²ç«¯æœå‹™è²» (Cloud Services)", "ç¶²ç«™ç¶²åŸŸåç¨±è²» (Domain/Web Fees)"] },
            { title: "ğŸ“ˆ è¡ŒéŠ·èˆ‡æ¥­å‹™è²» (Marketing & Sales)", subItems: ["å»£å‘Šèˆ‡å®£å‚³è²» (Advertising)", "æ¥­å‹™äº¤éš›è²» (Sales Relations)", "å±•è¦½è²» (Exhibition Fees)", "å°åˆ·å®£å‚³å“ (Printed Materials)", "å¸‚å ´èª¿ç ”è²» (Market Research)"] },
            { title: "ğŸ“š åŸ¹è¨“èˆ‡äººæ‰è²» (Training & HR)", subItems: ["å°ˆæ¥­åŸ¹è¨“è²» (Professional Training)", "æ‹›å‹Ÿè²»ç”¨ (Recruitment Costs)", "æ•™è‚²è¨“ç·´èª²ç¨‹è²» (Course Fees)", "å“¡å·¥å¥åº·æª¢æŸ¥è²» (Health Check-ups)"] },
            { title: "ğŸ§‘â€ğŸ’» å°ˆæ¥­æœå‹™è²» (Professional Services)", subItems: ["é¡§å•è²» (Consulting)", "æ³•å¾‹åŠæœƒè¨ˆè²»ç”¨ (Legal & Accounting)", "å¤–éƒ¨å¯©è¨ˆè²» (External Audit)", "ç¿»è­¯/å£è­¯è²» (Translation/Interpreting)"] },
            { title: "ğŸ¦ è²¡å‹™èˆ‡é›œé …è²» (Financial & Misc.)", subItems: ["éŠ€è¡Œæ‰‹çºŒè²» (Bank Charges)", "åˆ©æ¯æ”¯å‡º (Interest Expense)", "æ”¿åºœè¦è²»èˆ‡ç½°é° (Fees & Penalties)", "ä¿éšªè²» (Insurance Premiums)", "æ…ˆå–„æè´ˆ (Donations)"] },
            { title: "â“ å…¶ä»–é›œé …è²»ç”¨ (Miscellaneous)", subItems: ["å…¶ä»–é›œé …è²»ç”¨ (Misc. Other)"] }
        ];

        // è¼”åŠ©å‡½å¼ï¼šé¡¯ç¤ºå®¢è£½åŒ–è¨Šæ¯
        function showMessage(message, type = 'info') {
            const messageBox = document.getElementById('message-box');
            messageBox.textContent = message;
            messageBox.className = `p-3 rounded-lg text-sm transition-opacity duration-300 ${
                type === 'error' ? 'bg-red-100 text-red-700' :
                type === 'success' ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700'
            }`;
            messageBox.style.opacity = '1';
            setTimeout(() => {
                messageBox.style.opacity = '0';
            }, 5000);
        }

        // è¼”åŠ©å‡½å¼ï¼šæ¸²æŸ“æœƒè¨ˆç§‘ç›®ä¸‹æ‹‰é¸å–®
        function renderCategorySelects() {
            const majorSelect = document.getElementById('expense-major');
            const minorSelect = document.getElementById('expense-minor');

            // æ¸²æŸ“å¤§é … (Major Category)
            majorSelect.innerHTML = '<option value="" disabled selected>è«‹é¸æ“‡è²»ç”¨å¤§é …</option>';
            expenseCategories.forEach((cat, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = cat.title;
                majorSelect.appendChild(option);
            });
            majorSelect.disabled = false; // ç¢ºä¿å¤§é …å¯é¸ (ä¿®æ­£ 1)

            // è™•ç†å¤§é …é¸æ“‡è®Šæ›´ï¼Œä»¥æ¸²æŸ“ç´°é … (Minor Category)
            majorSelect.addEventListener('change', (e) => {
                const selectedIndex = parseInt(e.target.value);
                const minorCats = expenseCategories[selectedIndex].subItems;

                minorSelect.innerHTML = '<option value="" disabled selected>è«‹é¸æ“‡è²»ç”¨ç´°ç›®</option>';
                minorCats.forEach(minor => {
                    const option = document.createElement('option');
                    option.value = minor;
                    option.textContent = minor;
                    minorSelect.appendChild(option);
                });
                minorSelect.disabled = false;
            });
        }

        // è¼”åŠ©å‡½å¼ï¼šæ¸²æŸ“è²»ç”¨æ¸…å–®
        function renderExpenses(expenses) {
            const listContainer = document.getElementById('expense-list');
            listContainer.innerHTML = ''; // æ¸…ç©ºç¾æœ‰æ¸…å–®

            if (expenses.length === 0) {
                listContainer.innerHTML = '<p class="text-center text-gray-500 py-8 border-2 border-dashed border-gray-200 rounded-lg">æ‚¨é‚„æ²’æœ‰ç”³å ±ä»»ä½•è²»ç”¨ã€‚</p>';
                return;
            }

            // ç”±æ–¼ firestore orderBy å¯èƒ½éœ€è¦é¡å¤–ç´¢å¼•ï¼Œä¿éšªèµ·è¦‹åœ¨å®¢æˆ¶ç«¯å†æ’åºä¸€æ¬¡
            expenses.sort((a, b) => (b.timestamp?.seconds || 0) - (a.timestamp?.seconds || 0));

            const totalAmount = expenses.reduce((sum, exp) => sum + (exp.amount || 0), 0);

            const listHtml = expenses.map(exp => {
                const date = exp.timestamp ? new Date(exp.timestamp.seconds * 1000).toLocaleDateString('zh-TW') : 'N/A';

                // ç§»é™¤å¤§é …å¾Œé¢çš„è‹±æ–‡æ‹¬è™Ÿï¼Œè®“æ¸…å–®æ›´ç°¡æ½”
                const cleanedMajorCategory = exp.majorCategory.replace(/ \(.+\)/g, '');

                return `
                    <div class="p-4 border-b last:border-b-0 border-gray-100 hover:bg-indigo-50/20 transition duration-150 rounded-lg">
                        <div class="flex justify-between items-start">
                            <div class="flex-grow">
                                <!-- ä¿®æ­£ 2: å¢åŠ é¡¯çœ¼çš„è—è‰²æ¨™ç±¤é¡¯ç¤ºå¤§é … -->
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 mb-1">
                                    ${cleanedMajorCategory}
                                </span>
                                <p class="text-lg font-bold text-gray-800">${exp.minorCategory}</p>
                                <p class="text-sm text-gray-500 mt-1">${date}</p>
                                <p class="text-xs text-gray-400 mt-1 truncate max-w-xs">${exp.description}</p>
                            </div>
                            <div class="text-right flex-shrink-0 ml-4">
                                <p class="text-2xl font-bold text-indigo-600">$${exp.amount.toLocaleString()}</p>
                                <p class="text-xs text-gray-500">${exp.currency || 'TWD'}</p>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            listContainer.innerHTML = `
                <div class="sticky top-0 z-10 mb-4 p-4 bg-indigo-100 rounded-lg flex justify-between items-center shadow-lg border border-indigo-200">
                    <p class="text-lg font-medium text-indigo-800">ç¸½ç”³å ±é‡‘é¡ï¼š</p>
                    <p class="text-3xl font-extrabold text-indigo-700">$${totalAmount.toLocaleString()}</p>
                </div>
                ${listHtml}
            `;
        }

        // ç›£è½ Firestore è³‡æ–™è®ŠåŒ–
        function setupFirestoreListener() {
            if (!window.expensesCollection) return;

            // æŸ¥è©¢ï¼šåƒ…ç²å–ç•¶å‰ç”¨æˆ¶çš„è²»ç”¨ç”³å ±ï¼Œä¸¦æŒ‰æ™‚é–“å€’åºæ’åˆ—
            // ä¿æŒ orderByï¼Œä½†ä¾è³´å®¢æˆ¶ç«¯æ’åºä½œç‚ºå‚™ç”¨
            const q = query(window.expensesCollection, orderBy("timestamp", "desc"));

            // è¨­ç½® onSnapshot ç›£è½å™¨
            onSnapshot(q, (querySnapshot) => {
                const expenses = [];
                querySnapshot.forEach((doc) => {
                    expenses.push({ id: doc.id, ...doc.data() });
                });

                renderExpenses(expenses);
                document.getElementById('loading-list-overlay').classList.add('hidden');
            }, (error) => {
                console.error("Error listening to Firestore:", error);
                showMessage("ç„¡æ³•è¼‰å…¥è²»ç”¨æ¸…å–®ã€‚è«‹å˜—è©¦å„²å­˜ä¸€ç­†æ–°è³‡æ–™ä¾†è§¸ç™¼æ›´æ–°ã€‚", 'error');
                document.getElementById('loading-list-overlay').classList.add('hidden');
            });
        }

        // è²»ç”¨ç”³å ±å„²å­˜å‡½å¼
        async function saveExpense() {
            const saveBtn = document.getElementById('save-button');
            const form = document.getElementById('expense-form');

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            if (!window.db || !window.userId) {
                showMessage("è³‡æ–™åº«æœªæº–å‚™å¥½ï¼Œè«‹ç¨å€™ã€‚", 'error');
                return;
            }

            // å–å¾—è¡¨å–®å€¼
            const formData = new FormData(form);
            const majorIndex = formData.get('major-category');

            // æª¢æŸ¥æ˜¯å¦é¸æ“‡äº†ç§‘ç›®
            if (majorIndex === null || majorIndex === "" || formData.get('minor-category') === null || formData.get('minor-category') === "") {
                showMessage("è«‹ç¢ºä¿å·²é¸æ“‡è²»ç”¨å¤§é …å’Œç´°ç›®ã€‚", 'error');
                return;
            }

            const majorCategory = expenseCategories[majorIndex].title;

            const expenseData = {
                majorCategory: majorCategory,
                minorCategory: formData.get('minor-category'),
                amount: parseFloat(formData.get('amount')),
                currency: formData.get('currency'),
                date: formData.get('date'),
                description: formData.get('description') || '',
                userId: window.userId,
                timestamp: serverTimestamp() // è¨˜éŒ„ä¼ºæœå™¨æ™‚é–“
            };

            // ç¦ç”¨æŒ‰éˆ•ä¸¦é¡¯ç¤ºè¼‰å…¥ç‹€æ…‹
            saveBtn.disabled = true;
            saveBtn.textContent = 'å„²å­˜ä¸­...';
            saveBtn.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
            saveBtn.classList.add('bg-gray-400', 'cursor-not-allowed');

            try {
                // ç”Ÿæˆä¸€å€‹æ–°çš„ Document ID
                const docRef = doc(window.expensesCollection);

                await setDoc(docRef, expenseData);

                showMessage("è²»ç”¨ç”³å ±æˆåŠŸå„²å­˜ï¼", 'success');
                form.reset(); // æ¸…ç©ºè¡¨å–®
                document.getElementById('expense-minor').disabled = true; // é‡ç½®ç´°ç›®ç‚ºç¦ç”¨

            } catch (e) {
                console.error("å„²å­˜æ–‡ä»¶æ™‚å‡ºéŒ¯: ", e);
                showMessage("å„²å­˜å¤±æ•—: " + e.message, 'error');
            } finally {
                // æ¢å¾©æŒ‰éˆ•ç‹€æ…‹
                saveBtn.disabled = false;
                saveBtn.classList.add('bg-indigo-600', 'hover:bg-indigo-700');
                saveBtn.classList.remove('bg-gray-400', 'cursor-not-allowed');
                saveBtn.innerHTML = `
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v8a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4L14 7m0 0l-2-2m2 2l2 2"/></svg>
                    å„²å­˜ç”³å ±
                `;
            }
        }

        // å•Ÿå‹•æ‡‰ç”¨ç¨‹å¼
        function initializeAppAndAuth() {
            // ç²å– Canvas ç’°å¢ƒè®Šæ•¸
            const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
            const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};
            const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

            try {
                // 1. åˆå§‹åŒ– Firebase App
                window.firebaseApp = initializeApp(firebaseConfig);
                window.db = getFirestore(window.firebaseApp);
                window.auth = getAuth(window.firebaseApp);

                // 2. è¨­ç½®èªè­‰æŒä¹…åŒ–ç‚ºæœƒè©±ç´šåˆ¥
                setPersistence(window.auth, browserSessionPersistence)
                    .catch((error) => {
                        console.error("Error setting persistence:", error);
                    });

                // 3. è™•ç†èªè­‰ç‹€æ…‹
                onAuthStateChanged(window.auth, async (user) => {
                    if (user) {
                        window.userId = user.uid;
                        document.getElementById('auth-status').textContent = `å·²ç™»å…¥ (ID: ${window.userId})`;
                        document.getElementById('auth-status').classList.remove('bg-gray-200', 'text-gray-700');
                        document.getElementById('auth-status').classList.add('bg-green-100', 'text-green-700', 'font-medium');

                        // è¨­ç½® Firestore Collection è·¯å¾‘
                        const collectionPath = `/artifacts/${appId}/users/${window.userId}/expenses`;
                        window.expensesCollection = collection(window.db, collectionPath);

                        setupFirestoreListener(); // é–‹å§‹ç›£è½è³‡æ–™
                    } else {
                        // å˜—è©¦ä½¿ç”¨è‡ªè¨‚ token ç™»å…¥
                        if (initialAuthToken) {
                            try {
                                await signInWithCustomToken(window.auth, initialAuthToken);
                            } catch (error) {
                                console.error("è‡ªè¨‚ Token ç™»å…¥å¤±æ•—:", error);
                                // è‡ªè¨‚ Token å¤±æ•—å¾Œï¼Œå˜—è©¦åŒ¿åç™»å…¥
                                try {
                                    await signInAnonymously(window.auth);
                                } catch (anonError) {
                                    console.error("åŒ¿åç™»å…¥å¤±æ•—:", anonError);
                                    showMessage("èªè­‰å¤±æ•—ï¼Œç„¡æ³•å„²å­˜è³‡æ–™ã€‚", 'error');
                                }
                            }
                        } else {
                            // å¦‚æœæ²’æœ‰è‡ªè¨‚ tokenï¼Œç›´æ¥åŒ¿åç™»å…¥
                             try {
                                await signInAnonymously(window.auth);
                            } catch (anonError) {
                                console.error("åŒ¿åç™»å…¥å¤±æ•—:", anonError);
                                showMessage("èªè­‰å¤±æ•—ï¼Œç„¡æ³•å„²å­˜è³‡æ–™ã€‚", 'error');
                            }
                        }
                    }
                    document.getElementById('loading-form-overlay').classList.add('hidden');
                });

                // æ¸²æŸ“ä¸‹æ‹‰é¸å–®ä¸¦è¨­ç½®äº‹ä»¶ç›£è½å™¨
                renderCategorySelects();
                document.getElementById('expense-form').addEventListener('submit', (e) => {
                    e.preventDefault();
                    saveExpense();
                });

            } catch (e) {
                console.error("åˆå§‹åŒ– Firebase å¤±æ•—: ", e);
                showMessage(`æ‡‰ç”¨ç¨‹å¼å•Ÿå‹•å¤±æ•—: ${e.message}`, 'error');
                document.getElementById('loading-form-overlay').classList.add('hidden');
            }
        }

        window.onload = initializeAppAndAuth;

    </script>
