            <form id="expense-form" class="space-y-4">

                <!-- èªè­‰ç‹€æ…‹ & è¨Šæ¯ -->
                <div class="flex flex-col md:flex-row md:space-x-4">
                    <div id="auth-status" class="p-2 text-xs bg-gray-200 text-gray-700 rounded-lg flex-1 mb-2 md:mb-0 transition duration-300">
                        æ­£åœ¨é€£ç·šèªè­‰...
                    </div>
                    <div id="message-box" class="opacity-0 transition duration-300 flex-1"></div>
                </div>

                <!-- è²»ç”¨å¤§é …/ç´°ç›® -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="expense-major" class="block text-sm font-medium text-gray-700">æœƒè¨ˆç§‘ç›® (å¤§é …)*</label>
                        <!-- ç§»é™¤ disabled å±¬æ€§ï¼Œäº¤çµ¦ JS è™•ç† -->
                        <select id="expense-major" name="major-category" required disabled
                            class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md border shadow-sm">
                        </select>
                    </div>
                    <div>
                        <label for="expense-minor" class="block text-sm font-medium text-gray-700">æœƒè¨ˆç§‘ç›® (ç´°ç›®)*</label>
                        <select id="expense-minor" name="minor-category" required disabled
                            class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 bg-gray-50 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md border shadow-sm">
                            <option value="" disabled selected>è«‹å…ˆé¸æ“‡å¤§é …</option>
                        </select>
                    </div>
                </div>

                <!-- é‡‘é¡/å¹£åˆ¥ -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="expense-amount" class="block text-sm font-medium text-gray-700">é‡‘é¡ (Amount)*</label>
                        <input type="number" step="0.01" min="0.01" id="expense-amount" name="amount" required
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="1200.00">
